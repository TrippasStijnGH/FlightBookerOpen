@model FlightBooker.ViewModels.FSResultsVM;


<div class="container mt-4">
    @if (Model.GroupedFlights != null && Model.GroupedFlights.Any())
    {
        <h3 class="mb-4">Available Flights</h3>
        
        @foreach (var group in Model.GroupedFlights)
        {
            <div class="card mb-4 shadow-sm flight-card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Flight ID</th>
                                    <th>Departure City</th>
                                    <th>Arrival City</th>
                                    <th>Departure Time</th>
                                    <th>Arrival Time</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var flight in group)
                                {
                                    <tr>
                                        <td>@flight.FlightID</td>
                                        <td>@flight.DepartCityName</td>
                                        <td>@flight.ArriveCityName</td>
                                        <td>@flight.LocalDateTimeDepart.ToString("MM/dd/yyyy hh:mm tt")</td>
                                        <td>@flight.LocalDateTimeArrive.ToString("MM/dd/yyyy hh:mm tt")</td>
                                        <td>@(flight.RealPrice.ToString("C") ?? "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                     @{
                        decimal totalPrice = group.Sum(f => f.RealPrice);
                        var flightIds = string.Join(",", group.Select(f => f.FlightID));
                        
                        
                    }
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            <h5 class="mb-0">Total Price: @totalPrice.ToString("C")</h5>
                            
                        </div>
                        
                       
                        <div>
                            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="d-inline">
                                <input asp-for="TravelClass" class="form-control" type="hidden" value="@Model.TravelClass"/>
                                <input asp-for="FlightIds" class="form-control" type="hidden" value="@flightIds" />
                                <button type="submit" class="btn btn-outline-primary me-2">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                                
                            </form>

                            <form asp-controller="Booking" asp-action="StartBookingProcessFS" method="post" class="d-inline">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="TravelClass" class="form-control" type="hidden" value="@Model.TravelClass" />
                                <input asp-for="FlightIds" class="form-control" type="hidden" value="@flightIds"/>
                                
                                
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check2-circle"></i> Book Now
                                </button>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
    <div class="alert alert-info">
        <h4 class="alert-heading">No Flights Available</h4>
        <p>Geen vluchten gevonden</p>
    </div>
    }
</div>























